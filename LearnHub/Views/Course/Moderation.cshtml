@model List<LearnHub.Models.Courses>

@{
    ViewData["Title"] = "Курсы на модерации";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="teach-container">    
    <div class="row justify-content-center">
        <ul class="course-list">
            @foreach (var course in Model)
            {
                <li class="course-item">
                    <h3 class="course-title ">@course.Title</h3>
                    <div class="course-actions">
                        <a href="@Url.Action("Details", "Course", new { id = course.CourseId })" class="btn btn-primary">Подробнее</a>
                        <form method="post" action="@Url.Action("PublishCourse", "Course")">
                            <input type="hidden" name="courseId" value="@course.CourseId" />
                            <button type="submit" class="btn btn-success">Опубликовать</button>
                        </form>
                        <form method="post" action="@Url.Action("SendToDraft", "Course")">
                            <input type="hidden" name="courseId" value="@course.CourseId" />
                            <button type="submit" class="btn btn-success">Отправить на доработку</button>
                        </form>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
