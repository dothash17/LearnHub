@model List<LearnHub.Models.Courses>

@{
    ViewData["Title"] = "Teaching";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-teach">
    <div class="heading-container">
        <h2 class="heading-teach">Курсы</h2>
        <a class="create-btn" href="@Url.Action("Create", "Course")">+ Новый курс</a>
    </div>

    @if (Model.Count > 0)
    {
        <div class="course-list">
            @foreach (var course in Model)
            {
                <div class="course-card">
                    <h3 class="course-title">@course.Title</h3>
                    <p class="course-description">@course.Description</p>
                    <a class="create-btn" href="@Url.Action("Details", "Course", new { id = course.CourseId })">View Details</a>
                    <form asp-action="Delete" asp-route-id="@course.CourseId" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить @course.Title?');">
                        <button type="submit" class="create-btn delete-btn">Delete</button>
                    </form>
                </div>
            }
        </div>
    }
    else
    {
        <p class="no-courses-msg">You have no courses yet. <a class="btn btn-primary" href="@Url.Action("Create", "Course")">Create one now</a>.</p>
    }
</div>
